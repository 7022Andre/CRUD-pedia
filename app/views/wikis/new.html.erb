<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= f.label "Description" %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your description" %>
      </div>
      <% if current_user.role != "standard" %>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Make wiki private?
        <% end %>
      </div>
      <% end %>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
