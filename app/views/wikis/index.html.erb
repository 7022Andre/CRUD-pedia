<h1 class="text-center">Wiki Wiki</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<table class="table table-striped">
			<tbody>
				<% @wikis.each do |wiki| %>
					<tr class="media">
						<td>
							<% if wiki.private %>
								<i class="glyphicon glyphicon-sunglasses"></i>
							<% end %>
							<%= link_to " #{wiki.title}", wiki %>
						</td>
				 		<% if user_signed_in? && current_user == wiki.user %>
							<td><%= link_to "Edit", edit_wiki_path(wiki.id), class:"btn btn-success" %></td>
							<td><%= link_to "DELETE", wiki, method: :delete, class:"btn btn-danger", data: {confirm: "Are you sure?"} %></td>
						<% elsif user_signed_in? %>
							<td><%= link_to "Edit", edit_wiki_path(wiki.id), class:"btn btn-success" %></td>
						<% end %>
					</tr>
				<% end %>
			</tbody>
		</table>
		<div class="text-center">
			<% if user_signed_in? %>
				<%= link_to "Create a new Wiki", new_wiki_path, class: "btn btn-success" %>
			<% end %>   
		</div>
	</div>
</div>
