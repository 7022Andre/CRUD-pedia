<h1>New Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
      </div>
      <div class="form-group">
        <%= f.label "Description" %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your description" %>
      </div>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Make wiki private?
        <% end %>
      </div>
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="col-md-4 well">
    <h3>Please enter your description in Markdown language.</h3>
    <h5>If you're not familiar with Markdown check out this <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" target="blank">handy cheat sheet</a>.</h5>
  </div>
</div>
